<div id="conteneur">
{{#if listeSponsor}}

  <img src="/image/cat_sponsor.png" alt="serrage de main">
  <h1>Gestion des Sponsors</h1>

  <a href="/sponsorsAdmin/ajouterSponsor"><img src="/image/act_add.png" alt="ajouter"> Ajouter un sponsor </a>
  <br />
  <br />

  <table id="tabAdmin">
    <tr>
      <th>Nom</th>
      <th>Activite</th>
      <th>Actions</th>
    </tr>
    {{#each listeSponsor}}
    <tr>
      <td>{{this.SPONOM}}</td>
      <td>{{this.SPOSECTACTIVITE}}</td>
      <td><a href="/sponsorsAdmin/modifierSponsor/{{this.SPONUM}}"><img src="/image/act_edit.png" alt="modifier"> Modifier</a> <a href="/sponsorsAdmin/supprimerSponsor/{{this.SPONUM}}"><img src="/image/act_delete.png" alt="supprimer"> Supprimer</a></td>
    </tr>
    {{/each}}
  </table>

{{else if listeEcurie}}

  <h1>Ajouter un sponsor</h1>

  <form action="/sponsorsAdmin/sponsorAjouter"  enctype="multipart/form-data" method="POST">
    <label>Nom</label> <input type="text" id="nom" name="nom" required> <br>
    <label>Secteur d'activite</label> <input type="text" id="secteur" name="secteur"  required> <br>
    <label>Ecurie sponsorisee</label>
    <select name="ecurie">
      <option value="null">Aucune</option>
      {{#each listeEcurie}}
        <option value="{{this.ECUNUM}}">{{this.ECUNOM}}</option>
      {{/each}}
    </select><br>
    <input type="submit" value="Ajouter">
  </form>

{{else if detailSpo}}

  <h1>Modifier un sponsor </h1>

  <form action="/sponsorsAdmin/sponsorModifier"  enctype="multipart/form-data" method="post">
    <label>Nom</label><input type="text" id="nom" name="nom" value="{{detailSpo.SPONOM}}" required><br>
    <label>Secteur d'activite</label><input type="text" id="secteur" name="secteur" value="{{detailSpo.SPOSECTACTIVITE}}" required> <br>
    <label>Ecurie sponsorisee</label>
    <select name="ecurie">
        <option value="null">Aucune</option>
      {{#each listeEcurie2}}
        <option value="{{this.ECUNUM}}"> {{this.ECUNOM}}</option>
      {{/each}}
    </select><br>
    <input type="hidden" id="numspo" name="numspo" value="{{detailSpo.SPONUM}}">
    <input type="submit" value="Modifier">
  </form>

{{else}}
  <a href="/sponsorsAdmin"> Action effectué ! retour à la liste des sponsors.</a>
{{/if}}
</div>
